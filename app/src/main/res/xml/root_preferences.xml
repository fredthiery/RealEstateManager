<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/realtor">

        <EditTextPreference
            app:key="realtor_name"
            app:title="@string/your_name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/display_settings">
        <DropDownPreference
            app:defaultValue="0"
            app:entries="@array/currencies"
            app:entryValues="@array/currency_values"
            app:key="currency"
            app:title="@string/currency"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>